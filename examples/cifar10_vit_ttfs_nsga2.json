    "degradation_tolerance": 0.1,

    "configuration_mode": "nas",
    "model_type": "vit",

    "arch_search": {
      "optimizer": "nsga2",
      "pop_size": 12,
      "generations": 10,
      "seed": 42,

      "patch_size_options": [2, 4, 8],
      "d_model_options": [64, 96, 128, 192],
      "num_heads_options": [2, 4, 8],
      "num_layers_options": [2, 4, 6],
      "mlp_ratio_options": [2, 4],

      "warmup_fraction": 0.1,
      "training_batch_size": 128,

      "accuracy_evaluator": "extrapolating",
      "extrapolation_num_train_epochs": 1,
      "extrapolation_num_checkpoints": 5,
      "extrapolation_target_epochs": 10
